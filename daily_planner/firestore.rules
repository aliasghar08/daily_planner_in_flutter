rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to access only their own documents in the "users" collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to manage all tasks within their own user document
      match /tasks/{taskId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
